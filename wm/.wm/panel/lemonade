#!/usr/bin/env bash
# a wrapper to launch lemonade on every monitor, as determined by bspwm
# note: this has to be bash or it won't die correctly..
# todo: understand ^

echo -e -n "
==== ==== ==== ==== ==== \033[1;33m
 ,.        ,.        ,.
(:;)      (:;)      (:;)
 \`'        \`'        \` \e[0m
==== ==== ==== ==== ===="

iif() {
    eval $1 && echo -n "${2:-true}" || echo -n "${3:-false}"
}

error() {
   local sourcefile=$1
   local lineno=$2
   echo err: $sourcefile $lineno
}
trap 'error "${BASH_SOURCE}" "${LINENO}"' ERR

export -f error

# todo: reconsider this, is the different between juicer
# being main config point and themes passing into lemons..
set -a
THEME_NAME="${1}"
. "$HOME/.wm/scripts/theming/defaults"
. "$HOME/.bspwm_theme"
$gapped || p_gap=0


gapped=$(iif "[ ! $(bspc config window_gap) -le 0 ]")
top=$(iif "[ "$p_position" = "top" ]")

# only need this for p_gap and b_border_width values.
# relevance
cd $(dirname $([ -L $0  ] && readlink -f $0 || echo $0))
PATH=$PATH:`pwd`/tools

# mon dim
dim() {
	bspc query -T -m $mon | jq .rectangle.$1
}

eval bspc config ${p_position}_padding \
     $(iif $gapped $((p_height+p_gap)) $((p_height+p_gap+b_border_width)) )

i=0
# note: mon will be available to all lemons as reference.
for mon in $(bspc query -M); do
	i=$(($i+1))
	conf=`ls juicers | sed -n "$i p"`
	[ -z "$conf" ] && conf=`ls juicers | sed -n "1 p"`
	geom="$(( $(dim width)-(p_gap*2) ))x$p_height+$(( $(dim x)+p_gap ))+$(iif $top $p_gap $(($(dim height)-(p_gap+p_height))) )"
	tools/lemonade "$conf" "$geom" &
done

if $gapped; then
	trap "eval bspc config ${p_position}_padding 0; trap - TERM; kill 0;" INT TERM QUIT
else
	trap "eval bspc config ${p_position}_padding $b_border_width; trap - TERM; kill 0;" INT TERM QUIT
fi

# where are we?
echo $$ > /tmp/panel-pid

wait

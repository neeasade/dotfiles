#!/usr/bin/env bash
# these names don't make sense I know
# who would season a lemon??

# depend on environment to come from i3blocks

# clickables:

border=\#777777
border_side=$(bs O1 B$border U$bg +o +u)

while read -r line; do
    if [ ! "$name" = "tags" ]; then
	printf '%s\n' "${prefix}${border_side}$(echo "  $line  " | bs B$bg F$fg U$border +u +o)${border_side}$suffix"
    else
	# printf '%s\n' "${prefix}$(echo "  $line  " | bs B$bg F$fg)$suffix"
	printf '%s\n' "$line"
    fi
done

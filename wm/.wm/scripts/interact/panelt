#!/bin/sh
# Toggle the panel on/off

want=${1:-start}

if [ -z "$*" ]; then
    if systemctl --user status panel >/dev/null; then
	want=stop
    fi
fi

systemctl --user $want panel

# dunst pgrep's for panel
# commenting this out b/c resetting dunst clears the notification queue
# sleep 0.3
# theme refresh dunst

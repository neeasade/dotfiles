line() {
    bg
}

fg() {
    # elisp -r "(ct/shorten (ht-get ns/theme (if (ct/is-light-p \"$(bg)\") :foreground :background)))"

    if [ "$lemon_target_align" = left ]; then
	elisp -r '(ht-get ns/theme :foreground)'
    elif [ "$lemon_target_align" = right ]; then
	elisp -r '(ht-get ns/theme :foreground)'
    else
	elisp -r '(ht-get ns/theme :foreground)'
    fi
}

bg() {
    if [ "$lemon_target_align" = center ]; then
	    elisp -r '(ht-get ns/theme :background)'
    else
	    elisp -r '(ht-get ns/theme :background_)'
    fi

    # if [ "$lemon_target_align" = left ]; then
    # 	# light=$(elisp -r '(->> :accent2_ (ht-get ns/theme) ((lambda (c) (ct/lch-transform c (lambda (L C H) (list 75 C H))))) ct/shorten)')
    # 	# gradient $total
    # 	elisp -r '(ht-get ns/theme :foreground)'
    # elif [ "$lemon_target_align" = right ]; then
    # 	elisp -r '(ht-get ns/theme :foreground)'
    # else
    # 	elisp -r '(ht-get ns/theme :accent1)'
    # fi

    return

    # elisp -r '(->> "#d1dae5" (-map (lambda (ct/lch-transform ))) )'
    # gradient $total 8fe7d5 7cbefc | sed -n ${step}p

    # if [ "$lemon_target_align" = center ]; then
    # 	echo \#$background
    # else
    # 	gradient 3 176fa8 $background | sed -n ${step}p
    # fi
    # return

# $(elisp -r '(->> :accent1 (ht-get ns/theme) ct/shorten ct/pastel ct/pastel)')
    if [ "$lemon_target_align" = left ]; then
	    cat<<EOF | sed -n ${step}p
$(elisp -r '(->> :accent1_ (ht-get ns/theme) ((lambda (c) (ct/lch-transform c (lambda (L C H) (list 75 C H))))) ct/shorten)')
$(elisp -r '(->> :accent1 (ht-get ns/theme) ((lambda (c) (ct/lch-transform c (lambda (L C H) (list 75 C H))))) ct/shorten)')
$(elisp -r '(->> :accent1_ (ht-get ns/theme) ((lambda (c) (ct/lch-transform c (lambda (L C H) (list 75 C H))))) ct/shorten)')
EOF
    elif [ "$lemon_target_align" = right ]; then
	    cat<<EOF | sed -n ${step}p
$(elisp -r '(->> :accent1_ (ht-get ns/theme) ((lambda (c) (ct/lch-transform c (lambda (L C H) (list 75 C H))))) ct/shorten)')
$(elisp -r '(->> :accent1 (ht-get ns/theme) ((lambda (c) (ct/lch-transform c (lambda (L C H) (list 75 C H))))) ct/shorten)')
$(elisp -r '(->> :accent1_ (ht-get ns/theme) ((lambda (c) (ct/lch-transform c (lambda (L C H) (list 75 C H))))) ct/shorten)')
EOF
    else
	# maybe generate a new color for this section
	    cat<<EOF | sed -n ${step}p
$(elisp -r '(->> :background+ (ht-get ns/theme) ((lambda (c) (ct/lch-transform c (lambda (L C H) (list L C H))))) ct/shorten)')
$(elisp -r '(->> :accent2 (ht-get ns/theme) ((lambda (c) (ct/lch-transform c (lambda (L C H) (list 75 C H))))) ct/shorten)')
$(elisp -r '(ct/shorten (ht-get ns/theme :accent1_))')
EOF
	# center
    fi
}


# fast focus desktop
# cmd + alt - x : yabai -m space --focus recent
# cmd + alt - 1 : yabai -m space --focus 1

# send window to desktop and follow focus
ctrl + shift - 1 : yabai -m window --space 1
ctrl + shift - 2 : yabai -m window --space 2
ctrl + shift - 3 : yabai -m window --space 3
ctrl + shift - 4 : yabai -m window --space 4

ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4

ctrl - return : ~/bin/elisp '(ns/spawn-terminal)' || $TERMINAL

# move floating window
# shift + ctrl - a : yabai -m window --move rel:-20:0
# shift + ctrl - s : yabai -m window --move rel:0:20

alt + ctrl - l : ~/.wm/scripts/interact/resize_mac.sh east
alt + ctrl - h : ~/.wm/scripts/interact/resize_mac.sh west
alt + ctrl - n : ~/.wm/scripts/interact/resize_mac.sh south
alt + ctrl - e : ~/.wm/scripts/interact/resize_mac.sh north

# increase window size
# shift + alt - a : yabai -m window --resize left:-20:0
# shift + alt - w : yabai -m window --resize top:0:-20

# decrease window size
# shift + cmd - s : yabai -m window --resize bottom:0:-20
# shift + cmd - w : yabai -m window --resize top:0:20

# set insertion point in focused container
# ctrl + alt - h : yabai -m window --insert west

# toggle window zoom
# ctrl - d : yabai -m window --toggle zoom-parent
# ctrl - f : yabai -m window --toggle native-fullscreen
ctrl - f : yabai -m window --toggle zoom-fullscreen
ctrl - w : yabai -m window --close


# this never finds a window 
# ctrl - tab : yabai -m window --focus next

# toggle window split type
# alt - e : yabai -m window --toggle split

# float / unfloat window and center on screen
# note: grid won't apply on a tiled window
ctrl - s : yabai -m window --toggle float; yabai -m window --grid 4:4:1:1:2:2


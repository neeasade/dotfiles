#!/bin/sh

resolve() {
    xrdb -query | sort | awk -F: /${*}:/'{$1=""; print $0}' | head -n 1 | awk '{$1=$1;print}'
    # no xrdb in swayland
    # cat ${HOME}/.Xresources | grep -v "^!.*" | sort | awk -F: /${*}:/'{$1=""; print $0}' | head -n 1 | awk '{$1=$1;print}'
}

for key in "$@"; do
    ret=$(resolve "$key")
    if [ -z "$ret" ]; then
	ret=$(resolve "\*.$(echo "$key" | sed 's/.*\.//')")
    fi

    printf '%s\n' "$ret"
done

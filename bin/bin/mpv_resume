#!/bin/sh
# resume mpv playing from some saved playing point
# cf: ~/bin/mpv

print_resume_dirs() {
    fd . /home/neeasade/.config/mpv/watch_later -x head -n 1 {} | awk '/^#/{print substr($0, 3)}' | \
	while read -r save_file; do
	    if [ -e "$save_file" ]; then
		echo "$(dirname "$save_file")"
	    fi
	done
}

jump=$(print_resume_dirs | dmenu)
cd "$jump"
mpv *

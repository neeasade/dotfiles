#!/usr/bin/env bash

. ~/.sh.d/environment

usage() {
    echo "$0 [test|switch]"
    exit 1
}

if silent pgrep nixos-rebuild; then
    echo "rebuild is already running! exiting"
    exit 1
fi

sudo echo yeet >/dev/null # so we and all our subshells get it

if ${MAC:-false}; then
    vdo brew upgrade
    vdo brew upgrade --cask

    vdo nix-channel --update
    vdo darwin-rebuild changelog
    vdo darwin-rebuild --show-trace switch
    exit $?
fi

channel=$(sudo nix-channel --list | sed 's#https://nixos.org/channels/nixos-##')
echo "channel: $channel"


# cd is so we don't accidentally litter 'result' symlinks everywhere
cd

vdo sudo nix-channel --update nixos
# vdo sudo NIXPKGS_ALLOW_INSECURE=1 nixos-rebuild "$@"
vdo sudo nixos-rebuild "$@"

echo "note: nix-env is fucked"
# vdo nix-env -u

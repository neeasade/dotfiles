#!/usr/bin/env elisp
;; elisp-eval: emacs_batch=true
;; making this run in batch mode is mega slower.
;; that's ok because using it in a panel/dynamic contexts doesn't touch our running emacs.

(ns/util)
(ns/colors)

(ns/let-script-args
 (step start end)
 (ns/make-lines
  (mapcar (fn (eval `(color-rgb-to-hex ,@<> 2)))
	  (color-gradient
	   (color-name-to-rgb (ns/color-format start))
	   (color-name-to-rgb (ns/color-format end))
	   (string-to-number step)))))

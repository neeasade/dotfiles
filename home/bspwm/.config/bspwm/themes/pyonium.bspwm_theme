#!/bin/bash
# pyonium theme
# named so for the redditor who I got the term colors used here from.

THEME_NAME=pyonium

GTK_THEME=pyonium

# vim theme name
VIM_COLORS=mustang

# termite theme name
TERMITE_CONFIG=pyonium

# Background command
export BG_COMMAND='feh --bg-fill /home/neeasade/images/leaves.jpg'

. ~/.config/bspwm/themes/base.bspwm_theme $TERMITE_CONFIG

# bspwm
b_border_width=3
b_window_gap=16
b_split_ratio=0.6

# panel
PANEL_HEIGHT=32
PANEL_GAP=6
pBGInactiveTab="#ff444444"

# Workspace variables
export DO=' '
export DF=' '

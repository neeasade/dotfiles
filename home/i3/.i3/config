# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!
#note: alt=Mod1 win=Mod4
set $mod Mod4
set $center LVDS1

#Workspace names:
set $ws1 00
set $ws2 01
set $ws3 10
set $ws4 11
set $ws5 ‚ùñ

new_window pixel 3
new_float pixel 3


####   WS definitions   ####
#CENTIES
workspace "6:$ws1" output $center
workspace "7:$ws2" output $center
workspace "8:$ws3" output $center
workspace "9:$ws4" output $center
workspace "10:$ws5" output $center
#RIGHTIES


####   Navigation   ####
#SIDES
bindsym $mod+i mode "wsl"
bindsym $mod+o mode "wsr"
#CENTER
bindsym $mod+1 workspace "6:$ws1"
bindsym $mod+2 workspace "7:$ws2"
bindsym $mod+3 workspace "8:$ws3"
bindsym $mod+4 workspace "9:$ws4"
bindsym $mod+5 workspace "10:$ws5"


####   Window WS switching   ####
#
bindsym $mod+Shift+i mode "wsls"
bindsym $mod+Shift+o mode "wsrs"
#CENTER
bindsym $mod+Shift+1 move container to workspace "6:$ws1"
bindsym $mod+Shift+2 move container to workspace "7:$ws2"
bindsym $mod+Shift+3 move container to workspace "8:$ws3"
bindsym $mod+Shift+4 move container to workspace "9:$ws4"
bindsym $mod+Shift+5 move container to workspace "10:$ws5"


####   Font.   ####
font pango:Terminess Powerline 12px

floating_modifier $mod


####   Launching programs(Will need removed when xbindkeys)   ####
bindsym $mod+space exec ~/bin/dmenu_run
#bindsym $mod+Return exec urxvt

# kill focused window
bindsym $mod+w kill

#lock with blur script:
bindsym $mod+p exec ~/.i3/lock.sh


####    Focus   ####
# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

#focus Child/Parent
bindsym $mod+a focus parent
bindsym $mod+d focus child

# change focus between tiling / floating windows
#bindsym $mod+space focus mode_toggle


####    Window manipulation   ####
# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

#Move current floating container to the center
bindsym $mod+c move absolute position center

# resize window (you can also use the mouse for that)
bindsym $mod+g mode "resize"
mode "resize" {
        bindsym h resize shrink width 20 px or 20 ppt
        bindsym k resize grow height 20 px or 20 ppt
        bindsym j resize shrink height 20 px or 20 ppt
        bindsym l resize grow width 20 px or 20 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# split in horizontal orientation
bindsym $mod+semicolon split h

# split in vertical orientation
bindsym $mod+slash split v

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+y layout tabbed
bindsym $mod+e layout toggle split


####   Reload/exit   ####
# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"


####    Bar and colors   ####
#window focus colors
client.focused #ffffff #ffffff #ffffff
client.unfocused #323232 #323232 #323232

#Hooray a bar. 
bar 
{
    position top
    workspace_buttons yes
    status_command i3blocks
    strip_workspace_numbers yes
    workspace_buttons yes
    colors
    {
        background #323232
        statusline #eeffff
#       class border bg text
        focused_workspace  #323232 #323232 #ffffff
        active_workspace   #323232 #323232 #999999
        inactive_workspace #323232 #323232 #666666
        urgent_workspace   #323232 #323232 #00ff44
    }
}

####   Window assignments to be used in program start   ####
assign [title = "VM VirtualBox : 1"] 5:$ws5
assign [title = "VM VirtualBox : 2"] 10:$ws5
assign [title = "VM VirtualBox : 3"] 15:$ws5


####   Startup programs   ####
exec ~/.i3/autostart

